<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/cv_row_song"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:layout_margin="10dp"
             android:background="@color/colorAccent"
             android:elevation="4dp">

	<RelativeLayout
		android:id="@+id/rl_error"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone">


		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:text="@string/err_unable_to_fetch_location"
			android:textColor="@color/new_data_color"/>
	</RelativeLayout>


	<RelativeLayout
		android:id="@+id/rl_data_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		android:orientation="vertical"
		>

		<ImageView
			android:id="@+id/iv_widget_thumbnail"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:layout_centerVertical="true"
			android:contentDescription="@string/cont_institute_image"
			android:gravity="center"
			/>


		<LinearLayout
			android:id="@+id/ll_widget_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/iv_widget_thumbnail"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_widget_open_status"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:padding="8dp"
				android:textColor="@color/new_data_color"
				android:textSize="12sp"/>

			<TextView
				android:id="@+id/tv_widget_Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:ellipsize="end"
				android:maxLines="1"
				android:padding="8dp"
				android:textColor="@color/new_data_color"
				/>


			<TextView
				android:id="@+id/tv_widget_address"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:padding="8dp"
				android:textColor="@color/new_data_color"
				/>
		</LinearLayout>


	</RelativeLayout>
</FrameLayout>